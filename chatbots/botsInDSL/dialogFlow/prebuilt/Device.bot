entities :
	Simple entity "device-module" :
		inputs in en {
			"Night Mode" synonyms "Night Mode"
			wifi synonyms wifi , "Wi-Fi" , "wi fi"
			vibration synonyms vibration
			volume synonyms volume
			bluetooth synonyms bluetooth
			flightmode synonyms flightmode , "airplane mode" , "flight mode"
			WLAN synonyms WLAN
			"reading mode" synonyms "reading mode"
			"do not disturb" synonyms "do not disturb"
			"silent mode" synonyms silent
			VoiceOver synonyms VoiceOver , "Voice Over"
			mobile synonyms mobile
			LTE synonyms LTE
			"power saving" synonyms "power saving" , "low power mode"
			NFC synonyms NFC
			"4g" synonyms "4g"
			gps synonyms gps , "location services"
			"Hands-free mode" synonyms "Hands-free mode"
			"3G" synonyms "3G"
	}
	Simple entity "device-action" :
		inputs in en {
			on synonyms on , active , activated , enabled , working , "switched on"
			off synonyms off , inactive , deactivated , disabled , "switched off"
	}

actions :
	Request post HttpRequest :
		URL : "" ;
		basicAuth : "" : "" ;
	Response HttpResponse :
		Request : HttpRequest ;
		inputs in en {
			request. text
	}
	text response "device.settings.checkTxtResp1" :
		inputs in en {
			" "
	}

flows :
	- user "device.settings.check" => chatbot "device.settings.checkTxtResp1" ;
	- user "device.settings.on" => chatbot "device.settings.checkTxtResp1" {
		=> user "device.settings.onoff - context:device-settings-on-off" => chatbot "device.settings.checkTxtResp1" ;
		=> user "device.settings.on - context:settings-on-off" => chatbot "device.settings.checkTxtResp1" ;
		=> user "device.settings.off - context:settings-on-off" => chatbot "device.settings.checkTxtResp1" ;
	} ;
	- user "device.operational_system.check" => chatbot "device.settings.checkTxtResp1" ;
	- user "device.screen.lock" => chatbot "device.settings.checkTxtResp1" ;
	- user "device.battery.check" => chatbot "device.settings.checkTxtResp1" ;
	- user "device.settings.off" => chatbot "device.settings.checkTxtResp1" {
		=> user "device.settings.onoff - context:device-settings-on-off" => chatbot "device.settings.checkTxtResp1" ;
		=> user "device.settings.on - context:settings-on-off" => chatbot "device.settings.checkTxtResp1" ;
		=> user "device.settings.off - context:settings-on-off" => chatbot "device.settings.checkTxtResp1" ;
	} ;
	- user "device.screen.unlock" => chatbot "device.settings.checkTxtResp1" ;
	- user "device.memory.check" => chatbot "device.settings.checkTxtResp1" ;

