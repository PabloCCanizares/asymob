			"disconnect " ( "Wi-Fi" ) [ module ] ,
			"off the " ( Bluetooth ) [ module ] ,
			"I\'d like to turn off my " ( GPS ) [ module ] ,
			"disable " ( mobile ) [ module ] " data" ,
			"switch off " ( "airplane mode" ) [ module ] ,
			"turn off " ( WiFi ) [ module ] ,
			"deactivate " ( silent ) [ module ] " mode" ,
			"close " ( GPS ) [ module ] ,
