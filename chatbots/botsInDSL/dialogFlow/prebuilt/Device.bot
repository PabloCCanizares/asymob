			"bring on the " ( Bluetooth ) [ module ] ,
			( GPS ) [ module ] " on now" ,
			"enable " ( "mobile data" ) [ module ] ,
			( vibration ) [ module ] " on" ,
			"from now on " ( GPS ) [ module ] " on" ,
			"switch " ( "airplane mode" ) [ module ] " on" ,
			"put my phone on " ( silent ) [ module ]
		}
		parameters :
			module : entity "device-module" ;

